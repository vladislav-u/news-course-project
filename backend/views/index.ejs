<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>OVERSEER</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
			crossorigin="anonymous"
		/>
		<script
			src="https://kit.fontawesome.com/645a404e77.js"
			crossorigin="anonymous"
		></script>
		<link rel="stylesheet" type="text/css" href="css/styles.css" />
	</head>
	<body>
		<!-- Navigation Bar -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="/"
					><i class="fa-solid fa-eye"></i>VERSEER</a
				>

				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav ms-auto">
						<a class="nav-link active" aria-current="page" href="/register"
							>Register</a
						>
						<a class="nav-link active" aria-current="page" href="/login"
							>Login</a
						>
					</div>
				</div>
			</div>
		</nav>

		<!-- News Articles -->
		<div class="container">
			<div class="blog-section">
				<div class="title">
					<h2><i class="fa-solid fa-eye"></i>VERSEER</h2>
					<p>Most Popular and Fresh News Today</p>
				</div>

				<!-- Search Bar -->
				<form action="/search" method="GET">
					<div class="search-form">
						<input
							class="search-txt"
							type="search"
							name="searchQuery"
							placeholder="Search"
							required
						/>
						<button class="search-btn">
							<i class="fa-solid fa-magnifying-glass"></i>
						</button>
					</div>
				</form>

				<div class="cards">
					<% articles.forEach((article) => { %>
					<div class="card">
						<div class="image-section">
							<img src="<%= article.image %>" alt="Preview Image" />
						</div>
						<div class="content">
							<h4><%= article.title %></h4>
							<p><%= article.description %></p>
							<a href="<%= article.url %>">Read more</a>
						</div>
						<div class="posted-date">
							<p>
								<%= article.publishedAt.split('T')[0] + " " +
								article.publishedAt.split('T')[1].slice(0, -1) %>
							</p>
						</div>
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</body>
</html>
